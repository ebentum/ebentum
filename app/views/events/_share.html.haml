- if @fb_access_token && !@fb_access_token.autopublish
  %p
    #facebook_share{:class => 'switch', :data => {:off => '', :on => 'primary', 'on-label' => "<i class='icon-ok icon-white'></i>", 'off-label' => "<i class='icon-remove'></i>"}}
      %input{:type => "checkbox"}
    = t('.share_activity', :provider => 'Facebook')
