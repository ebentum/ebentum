.col-xs-12
  .row
    .col-xs-4
      .card-square
        = image_tag(@event.get_picture.photo.url(:medium), :class => 'block')

    .col-xs-8
      .row
        .col-xs-12
          .card
            .card-header
              = @event.name
            .card-content
              .row
                .col-xs-12
                  #event_description
                    = @event.description

            #event-info-row.card-content
              .row
                .col-xs-6.ptl
                  .card-content
                    .media
                      .pull-left
                        .media-object.fui-man-24.mll
                      .media-body
                        - user = User.find(@event.creator)
                        = t('.organized_by')
                        %a{:href => user_path(user)}
                          = user.complete_name
                  .card-content
                    .media
                      .pull-left
                        .media-object.fui-calendar-24.mll
                      .media-body
                        = l(@event.start_date, :format => :long)+', '+l(@event.start_time, :format => :short)
                  .card-content
                    .media
                      .pull-left
                        .media-object.fui-location-24.mll
                      .media-body
                        = @event.place
