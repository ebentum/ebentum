.span12
  .row-fluid
    .span4
      .card-square
        = image_tag(@event.get_picture.photo.url(:medium), :class => 'block')

    .span8
      .row-fluid
        .span12
          .card
            .card-header
              %h1
                = @event.name
            .card-content
              .row-fluid
                .span12
                  #event_description
                    = @event.description

            #event-info-row.card-content
              .row-fluid
                .span6.ptl
                  .card-content
                    .media
                      .pull-left
                        .media-object.fui-man-24.mll
                      .media-body
                        - user = User.find(@event.creator)
                        = t('.organized_by')
                        %a{:href => user_path(user)}
                          = user.complete_name
                  .card-content
                    .media
                      .pull-left
                        .media-object.fui-calendar-24.mll
                      .media-body
                        = l(@event.start_date, :format => :long)+', '+l(@event.start_time, :format => :short)
                  .card-content
                    .media
                      .pull-left
                        .media-object.fui-location-24.mll
                      .media-body
                        = @event.place
                .span6.man
                  #map.block

            .row-fluid.card-footer
              -if @event.creator == current_user
                .span2.footer-option.option-active
                  .option-action
                    = button_tag t('.edit'), :type => 'button', :class => 'btn btn-primary', :id => 'events_edit'
              - else
                .span2.footer-option

              .span2.footer-option
                %a#appointed{:href => "#"}
                  .option-header
                    = @event_users
                  .option-content
                    = t('.joined')
              - if user_signed_in?
                #user-action.span2.footer-option.pull-right.btn-round-bottom-right
                  .option-action
                    = hidden_field_tag 'event_id', @event.id
                    = button_tag t('.join'), :href => '#confirm_appoint', :type => 'button', :class => 'btn btn-primary hide', :id => 'appoint', :data => {:toggle => 'modal', :target => '#confirm_appoint', 'loading-text' => 'Apuntandome...'}
                    = button_tag 'Â¡Desapuntame!', :href => '#confirm_desappoint', :type => 'button', :class => 'btn btn-danger hide', :id => 'desappoint', :data => {:toggle => 'modal', :target => '#confirm_desappoint', 'loading-text' => 'Desapuntandome...'}
      = render 'share_event'
      .row-fluid
        .span12
          = render 'comments'

= render 'confirm_appoint'
= render 'confirm_desappoint'

