= form_for @event, :url => events_path, :html => { :multipart => true } do |f|
  .modal-body
    - if @event.errors.any?
      #error_explanation
        %h2
          = pluralize(@event.errors.count, "error")
          prohibited this event from being saved:
        %ul
          - @event.errors.full_messages.each do |msg|
            %li= msg
    .control-group
      = f.label :name, :class => 'control-label'
      .controls
        = f.text_field :name, :required => true, :placeholder => "Name"
    .control-group
      = f.label :description, :class => 'control-label'
      .controls
        = f.text_area :description, :required => true, :placeholder => "Name"
    .control-group
      = f.label :start_date, :class => 'control-label'
      .controls
        %input{:type => "date", :id => "event_start_date", :name => "event[start_date]"}
    .control-group
      = f.label :start_time, :class => 'control-label'
      .controls
        = f.time_select :start_time, :placeholder => "Time", :minute_step => 5
    .control-group
      = f.label :place, :class => 'control-label'
      .controls
        = f.text_field :place, :placeholder => "Name"
    .control-group
      = f.label :photo, :class => 'control-label'
      .controls
        = f.file_field :photo
  .modal-footer
    = f.submit "Save changes", :class => 'btn btn-primary'
    %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"} Close
    
