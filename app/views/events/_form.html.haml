
.modal-body
  = form_for @event, :url => events_path, :html => { :multipart => true } do |f|

    %span.btn.btn-success.fileinput-button
      %i.icon-plus.icon-white
      %span
        = t('.add_image')
      = f.file_field :photo

    .row-fluid
      .span12
        .centered_image
          .thumbnail.box
            #imagePreview
              %i.icon-picture

    = f.text_field :name, :placeholder => t(".name"), :class => "input-block-level"
    = f.text_area :description, :placeholder => t(".description_optional"), :class => "input-block-level"
    .row-fluid
      .span6
        .input-prepend
          %span.add-on
            %i.icon-calendar
          = f.text_field :start_date, :placeholder => t(".date"), :data => {"date-format" => t("date.formats.bootstrap_datepicker")}
          
      .span6
        .input-prepend
          %span.add-on
            %i.icon-time
          = f.text_field :start_time, :placeholder => t(".time")

    .input-prepend
      %span.add-on
        %i.icon-map-marker
      %input#place_autocomplete{:placeholder => t(".place"), :type => "text", :name => "place_autocomplete"}
      = f.hidden_field :place
      = f.hidden_field :lat
      = f.hidden_field :lng

    #map_canvas

.modal-footer
  %input#create_event_btn.btn.btn-primary{:name => "btn_login", :type => "submit", :value => t(".create")}
  %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"}
    = t(".cancel")