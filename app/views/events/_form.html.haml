

= form_for @picture, :remote => true, :html => { :multipart => true } do |f|
  .card-content
    = f.file_field :photo, :class => "hidden"
    = link_to "/#", :id => 'image-preview-link', :class => 'thumbnail' do
      = image_tag '/photos/small/missing.png', :id => "image-preview"

    #image-upload-progress.progress.progress-striped.active.hidden
      .bar{:style => "width: 0%;"}

= form_for @event, :html => { :multipart => true  } do |f|
  %input#main_picture_id{:name => "event[main_picture_id]", :type => "hidden"}
  .card-content
    = f.text_field :name, :placeholder => t(".name"), :class => "input-block-level"
    = f.text_area :description, :placeholder => t(".description_optional"), :class => "input-block-level", :rows => 4
  .pam
    .row-fluid
      .span6
        -# .input-prepend
        -#   %span.add-on
        -#     %i.icon-calendar
        -# .control-group
        -#   -#.fui-lock-16{:for => "event_start_date"}
        -# %label.control-label
        %i.fui-calendar-24
        = f.text_field :start_date, :placeholder => t(".date"), :data => { "date-format" => t("date.formats.bootstrap_datepicker")}
      .span6
        -# .input-prepend
        -#   %span.add-on
        -#     %i.icon-time
        %i.fui-time-24
        = f.text_field :start_time, :placeholder => t(".time")


    %i.fui-location-24
    %input#place_autocomplete{:placeholder => t(".place"), :type => "text", :name => "place_autocomplete"}
    = f.hidden_field :place
    = f.hidden_field :lat
    = f.hidden_field :lng

  #map_canvas

.row-fluid.card-footer
  .span3.offset6.footer-option.option-active
    .option-action
      %input#create_event_btn.btn.btn-primary{:name => "btn_login", :type => "submit", :value => t(".create")}
  .span3.footer-option
    .option-action
      %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"}
        = t(".cancel")