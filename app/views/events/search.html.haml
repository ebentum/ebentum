- if @page == 1
  .container
    .col-xs-12
      %form.form-horizontal#event_search_form
        .row
          .col-xs-12
            .row
              .col-xs-8.col-sm-offset-2
                .card
                  .row
                    .col-xs-6.col-sm-offset-2
                      .card-content
                        .control-group
                          %label.control-label{:for => "inputDistance"}
                            = t('.where')
                          .controls
                            - distanceOptions  = [t('.right_here'), 1], [t('.close_to_me'), 2], [t('.to_10_km'), 10], [t('.to_20_km'), 20], [t('.farther'), 50], [t('.i_dont_care'), 0]
                            = select_tag 'distance', options_for_select(distanceOptions, @distanceSelected)
                        .control-group
                          %label.control-label{:for => "inputAddDays"}
                            = t('.when')
                          .controls
                            - daysOptions  = [t('.now'), 1], [t('.tomorrow'), 2], [t('.this_week'), 7], [t('.this_month'), 30], [t('.i_dont_care'), 0]
                            = select_tag 'days', options_for_select(daysOptions, @daysSelected)

                  .row.card-footer
                    / .col-xs-2.footer-option.option-active.pull-right.btn-round-bottom-right
                    /   .option-action
                    /     %button.btn.btn-primary{:type => "submit"}
                    /       = t('.search')

  .col-xs-12
    #events_list.masonry_layout.centered
      = render 'list'
- else
  = render 'list'

