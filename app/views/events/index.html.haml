#myContent.span12.centered
  - for event in @events
    .thumbnail.box
      / %img{:alt => "", :src => event.photo}
      = image_tag event.photo.url()
      .caption
        %h5
          = event.name
        %p
          = event.description
        %p
          %a.btn.btn-primary{:href => "#"}
            %i.icon-thumbs-up.icon-white
            ¡Me apunto!
          = link_to event, :class => "btn" do
            %i.icon-info-sign
            Más información
