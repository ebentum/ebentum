- if current_user
  %ul.media-list{:id => 'new_comment'}
    %li.media
      %a.pull-left{:href => "#"}
        = image_tag(current_user.image_path(:thumb), :class => 'block media-object thumb_image')
      .media-body
        %small
          %a{:href => user_path(current_user)}
            = current_user.complete_name
        %br
        %span
          %textarea{:rows => "1", :id => 'new_comment_textarea', :placeholder => t('.write_comment'), :data => {:eventid => @event.id}}