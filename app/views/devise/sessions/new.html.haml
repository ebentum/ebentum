.span4
  .card
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:method => :post, :id => 'sign_in', :class => 'sign_in'}) do |f|
      .card-header
        = t('.sign_in')
        - if flash[:alert]
          .alert.alert-error.card-content{:id => 'sign_in_error'}
            %h4
              = t('.sign_in_error_title')
            %br
            %span{:id => 'sign_in_error_text'}
              = flash[:alert]
        - else
          .alert.alert-error.hide.card-content{:id => 'sign_in_error'}
            %h4
              = t('.sign_in_error_title')
            %br
            %span{:id => 'sign_in_error_text'}
        .card-content
          .row-fluid
            .span12{:id => 'omniauth_options'}
              %label
                = t('.sign_in_with')
              .row-fluid
                .span6
                  %a.btn.btn-facebook.btn-block.btn-large.pull-left{:href => '/users/facebook_login'}
                    %i.icon-facebook
                    facebook
                .span6
                  %a.btn.btn-info.btn-block.btn-large.pull-right{:href => '/users/twitter_login'}
                    %i.icon-twitter
                    twitter
        - klass = ''
        - if flash[:alert]
          - klass = 'error'
        .card-content
          .control-group{:class => klass}
            .controls
              = f.email_field :email, :id => 'email', :placeholder => t('.email'), :class => 'input-xlarge'
          .control-group{:class => klass}
            .controls
              = f.password_field :password, :id => 'password', :placeholder => t('.password'), :class => 'input-xlarge'
          = f.label :remember_me, :class => 'checkbox' do
            %span.icons
              %span.first-iocn.fui-checkbox-unchecked
              %span.second-icon.fui-checkbox-checked
            = f.check_box :remember_me, "data-toggle" => "checkbox", :value => ""
            = t('.remember_me')
        .card-content
          = render "devise/shared/links"
        .row-fluid.card-footer
          .span2.footer-option.option-active.pull-right.btn-round-bottom-right
            = f.button t('.sign_in_button'), :type => 'button', :class => 'btn btn-primary option-action btn-round-bottom-right', :id => 'sign_in_button', :data => {'loading-text' => t('.signing_in')}
.span4