.span4
.span4
  = form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => {:method => :post, :id => 'new_confirmation', :class => 'new_confirmation'}) do |f|
    %fieldset
    .card
      .card-header
        = t('.resend_confirmation_instructions')
      .card-content
        .row-fluid
          .span12
            .control-group
              .controls
                = f.email_field :email, :id => 'email', :placeholder => t('.email'), :class => 'input-block-level'
                %span.help-inline
      .row-fluid.card-footer
        .span5.footer-option.option-active.pull-right.btn-round-bottom-right
          .option-action.btn-round-bottom-right
            = f.button t('.help_me'), :type => 'button', :class => 'btn btn-large btn-primary', :id => 'new_confirmation_button', :data => {'loading-text' => t('.helping')}
    .alert.alert-success.hide{:id => 'new_confirmation_success'}
      %h4
        = t('.new_confirmation_ok_title')
      %span{:id => 'new_confirmation_ok_text'}
        = t('.new_confirmation_ok_text', :email => 'EMAIL')
  = render "devise/shared/links"
.span4
