%div{:class => 'span4 offset4'}
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    %fieldset
      = content_tag :legend, t(:change_your_password)
      = f.password_field :password, :id => 'password', :placeholder => t(:new_password), :class => 'input-xlarge'
      = f.password_field :password_confirmation, :id => 'password_confirmation', :placeholder => t(:new_password_confirmation), :class => 'input-xlarge'
      %br
      = f.button t(:confirm_new_password), :class => 'btn btn-large btn-primary'
  = render "devise/shared/links"