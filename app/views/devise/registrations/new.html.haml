- if is_omniauth_sign_up?
  .col-xs-3.visible-desktop
  .col-xs-6.visible-desktop{:id => 'omniauth_form'}
    = render 'sign-up-error'
    = render 'sign-up-form'
    = render "devise/shared/links"
  .col-xs-3.visible-desktop
  .visible-xs.visible-sm.tablet-nonavbar
    = render 'sign-up-error'
    = render 'sign-up-form'
    = render "devise/shared/links"
- else
  .col-xs-3.visible-desktop
  .col-xs-6.visible-desktop
    = render 'sign-up-error'
    = render 'sign-up-form'
    = render "devise/shared/links"
  .col-xs-3.visible-desktop
  .visible-xs.visible-sm.tablet-nonavbar
    = render 'sign-up-error'
    = render 'sign-up-form'
    = render "devise/shared/links"