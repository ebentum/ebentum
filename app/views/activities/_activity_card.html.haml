- cardSize = PicturesController.helpers.adjustCardSize(activity.subject.photoWidth, activity.subject.photoHeight)
- width = cardSize[:width]
- height = cardSize[:height]
- image_url = activity.subject.photoUrl

- cardStyles = PicturesController.helpers.getCardStyles(browser.mobile?, image_url, width, height)
- card_style = cardStyles[:card_style]
- card_class = cardStyles[:card_class]
- image_style = cardStyles[:image_style]

.card{:style => card_style, :class => card_class}
  .card-content{:style => "padding: 0;"}
    %a{:href => activity.subject.url}
      .card-image-placeholder{:style => image_style}
  .card-content.pts.pbs.plm.prm{:style => "background-color: #fff"}
    %div
      = activity.subject.displayName
  .card-footer.card-footer-masonry.pts.pbs.plm.prm
    .media
      .pull-left
        %a{:href => activity.actor.url}
          = image_tag(activity.actor.photoUrl , :class => 'block media-object thumb_image')
      .media.body
        %div
          = activity.actor.displayName
        .sub-paragraph
          = t('.' + activity.verb, :display_name => activity.subject.displayName)
        .sub-paragraph
          .format-timeago{:data => {:datevalue => activity.created_at }}


